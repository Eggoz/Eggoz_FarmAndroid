<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    >
    <RelativeLayout
        android:layout_width="180sp"
        android:layout_height="150sp">

        <ImageView
            android:id="@+id/img_buy_sell_item"
            android:layout_width="180sp"
            android:layout_height="110sp"
            android:scaleType="centerCrop"
            android:transitionName="item_image"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/icon" />

        <TextView
            android:id="@+id/txt_item_categories_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="11sp"
            android:gravity="center"
            android:transitionName="item_title"
            android:text="@string/app_name"
            android:maxLines="1"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@+id/img_buy_sell_item"/>

        <TextView
            android:id="@+id/txt_item_buy_sell_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="9sp"
            android:text="@string/app_name"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"
            android:transitionName="item_price"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img_buy_sell_item"
            android:layout_marginRight="9sp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>